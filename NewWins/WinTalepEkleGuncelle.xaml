<Window x:Class="ExtremeTaleplerV2.NewWins.WinTalepEkleGuncelle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExtremeTaleplerV2.NewWins"
        mc:Ignorable="d"
        Title="Talep Ekle" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" MaxWidth="336" MaxHeight="422" Height="422" Width="336" FontFamily="Bahnschrift" Icon="/Bookmark.png">
    <StackPanel x:Name="stckWrapper" VerticalAlignment="Top" Margin="5,5,5,0" Height="390">
        <Border Height="25" Margin="0,0,0,5">
            <DockPanel>
                <Label VerticalContentAlignment="Center" Width="100" Content="Tarih : "/>
                <DatePicker x:Name="dpTarih" VerticalContentAlignment="Center"/>
            </DockPanel>
        </Border>
        <Border Height="25" Margin="0,0,0,5">
            <DockPanel>
                <Label VerticalContentAlignment="Center" Width="100" Content="Kullanıcı : "/>
                <TextBox x:Name="txtKullanici1" VerticalContentAlignment="Center" Width="180" Canvas.Left="100" HorizontalAlignment="Left" Height="24" VerticalAlignment="Center"/>
                <Button x:Name="openUserList" Click="openUserList_Click" Background="Transparent" BorderThickness="0,.5,.5,.5" VerticalContentAlignment="Center" Height="24" Content="🔎" Width="30" HorizontalAlignment="Left" Canvas.Left="279" VerticalAlignment="Center"></Button>
            </DockPanel>
        </Border>
        <Border Height="25" Margin="0,0,0,5">
            <DockPanel>
                <Label VerticalContentAlignment="Center" Width="100" Content="Departman : "/>
                <TextBox x:Name="txtDepartman1" />
            </DockPanel>
        </Border>
        <Border Height="25" Margin="0,0,0,5">
            <DockPanel>
                <Label VerticalContentAlignment="Center" Width="100" Content="Mail Başlık : "/>
                <TextBox x:Name="txtBaslik1" />
            </DockPanel>
        </Border>
        <Border Height="156" Margin="0,0,0,5">
            <DockPanel>
                <Label VerticalContentAlignment="Center" Width="100" Content="Mail Detayı : "/>
                <TextBox AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" x:Name="txtAciklama1"  Height="150"/>
            </DockPanel>
        </Border>
        <Border x:Name="brdrDurumu">
            <DockPanel>
                <Label HorizontalAlignment="Left" Width="100" Content="Durumu : "/>
                <StackPanel>
                    <RadioButton x:Name="tamam1" Content="Tamamlandı" Margin="0,0,0,3"/>
                    <RadioButton x:Name="bekle1" Content="Bekliyor" Margin="0,0,0,3"/>
                    <RadioButton x:Name="incele1" Content="İncelenecek" Margin="0,0,0,3"/>
                    <RadioButton x:Name="iptal1" Content="İptal Edildi" Margin="0,0,0,3"/>
                </StackPanel>
            </DockPanel>
        </Border>
        <Border Margin="0,0,0,5">
            <Button Background="Transparent" HorizontalAlignment="Right" x:Name="btnYeniKayit1" Click="btnYeniKayit1_Click" Content="Kaydet" Height="24" Width="50"/>
        </Border>
    </StackPanel>
</Window>
