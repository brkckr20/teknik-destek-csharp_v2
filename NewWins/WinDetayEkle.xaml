<Window x:Class="ExtremeTaleplerV2.NewWins.WinDetayEkle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExtremeTaleplerV2.NewWins"
        mc:Ignorable="d"
        Title="Not / Detay Ekle" ResizeMode="NoResize" Height="210" Width="300" WindowStartupLocation="CenterScreen" FontFamily="Bahnschrift" Icon="/NewWins/Request Service.png">
    <Grid>
        <StackPanel Margin="4">
            <DockPanel Margin="0,0,0,2">
                <TextBlock Text="Tarih :" VerticalAlignment="Center" Width="100"/>
                <DatePicker x:Name="dpNotTarihi"/>
            </DockPanel>
            <DockPanel Margin="0,0,0,2">
                <TextBlock Text="Görüşme Notu :" VerticalAlignment="Center" Width="100"/>
                <TextBox Height="24" x:Name="txtGorusmeNotu"/>
            </DockPanel>
            <DockPanel Margin="0,0,0,2">
                <TextBlock Text="Not 1 :" VerticalAlignment="Center" Width="100"/>
                <TextBox Height="24" x:Name="txtNot1"/>
            </DockPanel>
            <DockPanel Margin="0,0,0,2">
                <TextBlock Text="Not 2 :" VerticalAlignment="Center" Width="100"/>
                <TextBox Height="24" x:Name="txtNot2"/>
            </DockPanel>
            <DockPanel Margin="0,0,0,2">
                <TextBlock Text="Not 3 :" VerticalAlignment="Center" Width="100"/>
                <TextBox Height="24" x:Name="txtNot3"/>
            </DockPanel>
            <DockPanel>
                <Button x:Name="btnDetayNotEkle" Click="btnDetayNotEkle_Click" Width="60" HorizontalAlignment="Right" Content="Kaydet ✔" Height="24" Background="Transparent"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
