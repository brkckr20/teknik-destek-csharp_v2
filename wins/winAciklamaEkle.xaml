<Window x:Class="ExtremeTaleplerV2.wins.winAciklamaEkle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExtremeTaleplerV2.wins"
        mc:Ignorable="d"
        Title="Açıklama Ekle" Height="260" Width="400" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" Icon="/wins/Group of Projects.ico">
    <Grid Margin="5">
        <StackPanel>
            <Border Margin="0,0,0,3">
                <DockPanel>
                    <Label Content="Tarih : " Width="95"/>
                    <DatePicker x:Name="dpGorusmeTarihi" />
                </DockPanel>
            </Border>
            <Border  Margin="0,0,0,3">
                <DockPanel>
                    <Label x:Name="x" Content="Görüşme Notu :"  Width="95"/>
                    <TextBox x:Name="txtGorusmeNotu" Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                </DockPanel>
            </Border>

            <Border  Margin="0,0,0,3">
                <DockPanel>
                    <Label Content="Not 1 :"  Width="95"/>
                    <TextBox x:Name="txtNot1"  />
                </DockPanel>
            </Border>
            <Border  Margin="0,0,0,3">
                <DockPanel>
                    <Label Content="Not 2 :"  Width="95"/>
                    <TextBox x:Name="txtNot2"  />
                </DockPanel>
            </Border>
            <Border  Margin="0,0,0,3">
                <DockPanel>
                    <Label Content="Not 3 :"  Width="95"/>
                    <TextBox x:Name="txtNot3"  />
                </DockPanel>
            </Border>
            <Border  Margin="0,0,0,3">
                <DockPanel>
                    <Button x:Name="btnAciklamaEkle" Click="btnAciklamaEkle_Click" Content="Kaydet" HorizontalAlignment="Right" Padding="15,5"  />
                </DockPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
