<Window x:Class="ExtremeTaleplerV2.wins.winTalepDetayiGuncelle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExtremeTaleplerV2.wins"
        mc:Ignorable="d"
        Title="Talep Detayını Güncelle"  Height="200" Width="400" WindowStartupLocation="CenterScreen" Background="#ececec" FontFamily="Calibri" Icon="/wins/Group of Projects.ico">
    <Grid>
        <StackPanel VerticalAlignment="Top" Margin="5">
            <Border Height="25" Margin="0,0,0,5">
                <DockPanel>
                    <Label VerticalContentAlignment="Center" Width="100" Content="Görüşme Notu : "/>
                    <TextBox x:Name="txtGorusmeNotu" VerticalContentAlignment="Center"/>
                </DockPanel>
            </Border>
            <Border Height="25" Margin="0,0,0,5">
                <DockPanel>
                    <Label VerticalContentAlignment="Center" Width="100" Content="Not 1 : "/>
                    <TextBox x:Name="txtNot1" VerticalContentAlignment="Center"/>
                </DockPanel>
            </Border>
            <Border Height="25" Margin="0,0,0,5">
                <DockPanel>
                    <Label VerticalContentAlignment="Center" Width="100" Content="Not 2 : "/>
                    <TextBox x:Name="txtNot2" VerticalContentAlignment="Center"/>
                </DockPanel>
            </Border>
            <Border Height="25" Margin="0,0,0,5">
                <DockPanel>
                    <Label VerticalContentAlignment="Center" Width="100" Content="Not 3 : "/>
                    <TextBox x:Name="txtNot3" VerticalContentAlignment="Center"/>
                </DockPanel>
            </Border>
            <Border Margin="0,0,0,5">
                <DockPanel>
                    <Button x:Name="btnTalepDetayiGuncelle"  Content="Kaydet" Padding="15,5" HorizontalAlignment="Right"/>
                </DockPanel>
                <!--güncelleme işleminden devam edilecek 19.07.2025-->
            </Border>
        </StackPanel>
    </Grid>
</Window>
